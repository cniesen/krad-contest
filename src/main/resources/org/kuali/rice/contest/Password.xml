<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="Uif-PasswordControl" parent="Uif-PasswordControl-parentBean"/>
    <bean id="Uif-PasswordControl-parentBean" abstract="true" class="org.kuali.rice.contest.components.control.Password"
          scope="prototype" parent="Uif-ControlBase">
        <property name="template" value="/WEB-INF/ftl/components/control/password.ftl"/>
        <property name="templateName" value="uif_password"/>
        <property name="cssClasses">
            <list merge="true">
                <value>uif-password</value>
            </list>
        </property>
        <property name="size" value="30"/>
    </bean>
</beans>